{
  "name": "brandplan",
  "version": "0.1.2",
  "description": "BrandPlan CLI for scaffolding and building brand token CSS",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.9.0"
  },
  "bin": {
    "brandplan": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ibrahim-bayer/brandplan.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/ibrahim-bayer/brandplan#readme",
  "bugs": {
    "url": "https://github.com/ibrahim-bayer/brandplan/issues"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "command-line",
    "tailwindcss",
    "tailwind-css",
    "tailwind-v4",
    "design-tokens",
    "design-system",
    "brand-guidelines",
    "css-generator",
    "theme-generator",
    "build-tool",
    "scaffolding",
    "brandplan"
  ],
  "dependencies": {
    "@brandplan/core": "0.1.2",
    "commander": "^12.1.0",
    "jiti": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  }
}
